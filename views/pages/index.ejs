<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/head') %>
</head>
<body>
    <header>
        <%- include('../layout/header') %>
    </header>
    <h3><%= databaseResults.length %> Saved Books</h3>
    <ul>
        <% databaseResults.forEach( book => { %>
            <li>
                <img src="<%= book.image_url %>" alt="">
                <h5><%= book.title %></h5>
                <p><%= book.author %></p>
                <form action="/books/<%= book.id %>"  method="get">
                    <button>View Details</button>
                </form>
            </li>
        <% }) %>
        </ul>
    
</body>
</html>